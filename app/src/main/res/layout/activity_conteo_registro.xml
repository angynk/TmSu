<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.transmilenio.transmisurvey.activites.ConteoRegistroActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nuevoRegistro"
        style="@style/AppTheme.Banner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/cod_nuevoRegistro_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_checked_icon"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tituloPanel"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <EditText
                android:id="@+id/cod_num_bus_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginTop="98dp"
                android:singleLine="true"
                android:imeOptions="actionDone"
                style="@style/AppTheme.Texto"
                app:backgroundTint="@color/colorSecondaryLigth"
                android:digits="1234567890abmtuksdneABMTUKSDNE"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:id="@+id/cod_despacho_button"
                style="@style/AppTheme.ButtonObtDatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clock"
                android:layout_marginTop="31dp"
                android:layout_below="@+id/cod_num_bus_editText"
                android:layout_toLeftOf="@+id/cod_despacho_textView"
                android:layout_toStartOf="@+id/cod_despacho_textView"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp" />

            <TextView
                android:id="@+id/cod_despacho_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/despacho"
                style="@style/AppTheme.Texto"
                android:layout_alignTop="@+id/cod_despacho_button"
                android:layout_alignLeft="@+id/cod_num_bus_editText"
                android:layout_alignStart="@+id/cod_num_bus_editText"
                android:layout_marginLeft="61dp"
                android:layout_marginStart="61dp" />

            </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/cod_servicio_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/AppTheme.Texto"
        android:layout_alignBaseline="@+id/cod_serv_textView"
        android:layout_alignBottom="@+id/cod_serv_textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="110dp"
        android:layout_marginRight="110dp"
        android:text="F28" />

    <TextView
        android:id="@+id/cod_num_bus_textView"
        style="@style/AppTheme.Encabezado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:text="@string/numBus"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/cod_serv_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/cod_serv_textView"
        style="@style/AppTheme.Encabezado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="@string/codigo"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/cod_num_bus_textView"
        android:layout_alignStart="@+id/cod_num_bus_textView"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

</RelativeLayout>
