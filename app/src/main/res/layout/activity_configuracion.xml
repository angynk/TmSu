<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.transmilenio.transmisurvey.activites.ConfiguracionActivity">

    <TextView
        android:id="@+id/di_titulo"
        style="@style/AppTheme.Banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/di_seleccionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seleccionar"
        style="@style/AppTheme.Texto"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/di_titulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />


    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/di_modo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/di_seleccionar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:layout_alignLeft="@+id/di_seleccionar"
        android:layout_alignStart="@+id/di_seleccionar"/>

    <Button
        android:id="@+id/di_sincronizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_sincronizar"
        style="@style/AppTheme.ButtonDialog"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
