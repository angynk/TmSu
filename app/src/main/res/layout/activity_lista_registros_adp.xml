<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryText"
    tools:context="com.transmilenio.transmisurvey.activites.ListaRegistrosADPActivity">


    <TextView
        android:id="@+id/adp_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/listRegistro"
        style="@style/AppTheme.Banner"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/adp_textView">

        <ListView
            android:id="@+id/adp_registros_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:dividerHeight="2px"
            android:divider="@color/colorPrimaryDark"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/adp_nuevo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_icon"
            android:background="@color/colorSecondaryLigth"
            />

        <Button
            android:id="@+id/adp_guardar_button"
            style="@style/AppTheme.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="10dp"
            android:text="@string/button_finalizar" />


        </FrameLayout>
</RelativeLayout>
