<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark">

    <Button
        android:id="@+id/button_guardar_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/button_guardar"
        style="@style/AppTheme.ButtonDialog"
        android:layout_below="@+id/tx_observaciones_edittext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_cancelar_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_cancelar"
        style="@style/AppTheme.ButtonDialog"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/button_guardar_alert"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tx_comentarios"
        style="@style/AppTheme.Encabezado"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="@string/txt_comentario"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/tx_observaciones_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text=""
        android:height="100dp"
        style="@style/AppTheme.Texto"
        android:inputType="textMultiLine"
        app:backgroundTint="@color/colorSecondaryLigth"
        android:layout_below="@+id/tx_comentarios"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>