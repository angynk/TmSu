<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textColor">@color/colorTextButton</item>-->
    </style>

    <style name="AppTheme.TextoBanner">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:color">@color/colorButtonNormal</item>


    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:popupBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorSecondaryLigth</item>
        <item name="android:textColor">@color/colorTextButton</item>
    </style>

    <style name="AppTheme.ButtonOpciones" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorSecondaryLigth</item>
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.ButtonObtDatos" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorButtonObt</item>
        <item name="android:textColor">@color/colorTextButton</item>

    </style>

    <style name="AppTheme.ButtonPaso" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/colorButtonPaso</item>
        <item name="android:textColor">@color/colorTextButton</item>
    </style>

    <style name="AppTheme.Banner" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorSecondaryLigth</item>
        <item name="android:textColor">@color/colorTextButton</item>

    </style>

    <style name="AppTheme.BannerOD" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@color/colorSecondaryText</item>
        <item name="android:textColor">@color/colorTextButton</item>

    </style>

    <style name="AppTheme.AlertasTitulo" >
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Encabezado">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>
    <style name="AppTheme.Texto">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="SpinnerTextViewItem" parent="@android:style/Widget.TextView" >
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.ButtonDialog" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/colorSecondaryLigth</item>
        <item name="android:textColor">@color/colorTextButton</item>
    </style>



</resources>
